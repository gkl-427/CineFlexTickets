{{#if isManager}}
<div class="centre" style="margin-top:18%;">
    <div class="redirect-route" style="margin-right:-60%;">
            <i class="fa fasfa-arrow-left" style="margin-left: 90%;
    font-family:
    'Courier New', Courier, monospace;
    font-size:22px;
    color:rgb(0, 123, 255);
    text-decoration:none">
       {{#link-to 'dashboard.shows' class="no-underline"}}BACK{{/link-to}}
        </i>
    </div>
    <form autocomplete="off" {{action 'sendRecord' on='submit' }}>
        <div class="form-field-group">
            <label for="shownumber">SHOW NUMBER</label>
            <div class="form-field-values">
                <select required=true onchange={{action "selectshownumber" value="target.value"}} class={{if
                    selectshownumber "selected" "" }}
                    style="font-size: 16px;font-family:'Courier New', Courier, monospace;margin-top:15px;width:200%;height:35px;">
                    {{#each availableshows as |shownumber|}}
                    <option value={{shownumber.Value}}>
                        {{shownumber.Value}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-field-group">
            <label for="moviename">MOVIE NAME</label>
            <div class="form-field-values">
                <select required=true onchange={{action "selectmovie" value="target.value" }} class={{if
                    selectmanager "selected" "" }}
                    style="font-size: 16px;font-family:'Courier New', Courier, monospace;margin-top:15px;width:200%;height:35px">
                    {{#each model as |user|}}
                    <option value={{user.movieid}}>
                        {{user.moviename}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-field-group">
            <label for="showtime">SHOW TIME</label>
            <legend>
            <input  style="width:200%;height:35px" required=true type="time" value={{showtime}} onchange={{action "updateTime" value="target.value"}} >
            </legend>
        </div>
        <div class="form-field-group">
            <label for="">SHOW DATE</label>
                <div class="form-field-values">
                    <input type="date" id="datepicker" min={{this.today}} value={{currentDate}} onchange={{action "updateDate"
                        value="target.value" }}
                        style="font-size:16px;font-family:'Courier New', Courier, monospace;margin-top:15px;height:35px;width:200%">
            </div>
        </div>
        <br>
        <button class="button" type="submit" style="margin-right: -20%;">ADD SHOW</button>
    </form>
</div>
{{else}}
<li class="dashboard-not-found"> OOPS! SOMETHING WENT WRONG</li>
<li class="header-list" style="font-family: 'Courier New', Courier, monospace;margin-top:10%;margin-left:52%">{{#link-to
    'application' class="no-underline"}}GO HOME{{/link-to}}</li>
{{/if}}
{{outlet}}