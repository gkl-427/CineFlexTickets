<div class="sidebar">
    <div class="profile_info">
    </div>
    <div class="mobile_nav_items">
        <span>{{#link-to 'dashboard.user'}}<i class="fas fa-home"></i>   HOME{{/link-to}}</span>
        <span>{{#link-to 'dashboard.bookings'}}<i class="fa-solid fa-ticket"></i>  BOOKINGS{{/link-to}}</span>
