    <div class="mobile_nav_items">
        <span>{{#link-to 'dashboard.users'}}<i class="fa-solid fa-user"></i>    USERS{{/link-to}}</span>
        <span>{{#link-to 'dashboard.listalltheatres'}}<i class="fa-solid fa-film"></i>   THEATRES{{/link-to}}</span>
    </div>
    {{/if}}
</div>
<div class="content">
<div class="header" style="margin-top:5%">
  {{#if model}}
    <ul>
      {{#each model as |theatre|}}
      <div class="theatre-box" style="margin-left:15px;height:380px">
        <li>
          <h3 style="color: rgb(0, 123, 255);">{{theatre.theatrename}}</h3>
        </li>
        <p>Theatre City:</p>
        <li>{{theatre.theatrecity}}</li>
        <p style=";">Features:</p>
        <li>{{theatre.features}}</li>
        <p>Show Date:</p>
        <li>{{theatre.showdate}}</li>
        <p>Show time:</p>
        <li>{{format-time theatre.showstarttime}}</li>
        <li style="margin-top:110px;" class="book-tickets">
          {{#link-to 'booktickets' theatre.theatreid theatre.showid class="no-underline"}}BOOK{{/link-to}}</li>
      </div>
      {{/each}}
    </ul>
  {{else}}
        
          <h1 style="font-family: 'Courier New', Courier, monospace;
          font-size:xx-larger;text-align:center;justify-content:center;
          margin-top:30%">  NO SHOWS AVAILABLE FOR THE MOVIE!! CHECK OUT LATER</h1>
        {{/if}}
</div>
</div>
{{/if}}
{{outlet}}